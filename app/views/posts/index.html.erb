<div class="col-md-8 col-md-offset-2">
  <div class="col-md-8">
    <p id="notice"><%= notice %></p>

    <h1>Listing Posts</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%= link_to 'New Post', new_post_path %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>


    <h1>Example partial usage:</h1>
    <%= render :partial => @posts %>
  </div>
  <div class="col-md-4">
    Monthly Breakdown Will Be Here
      <ul>
        <% @monthly_groups.each do |month| %>
          <li><%= month.month %></li>
        <% end %>
      </ul>
  </div>
</div>
