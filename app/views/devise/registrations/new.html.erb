<div class="form-page">
  <div class="form-container">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, class: "small-width" %><br />
        <%= f.email_field :email, autofocus: true, class: "field__item medium-width"  %>
      </div>

      <div class="field">
        <%= f.label :password, class: "small-width"  %>
        <%= f.password_field :password, autocomplete: "off", class: "field__item medium-width"  %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "medium-width" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "field__item medium-width"  %>
      </div>

      <div class="field">
        <%= render "devise/shared/links" %>
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

  </div>
</div>
