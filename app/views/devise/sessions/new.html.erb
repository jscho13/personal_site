<div class="form-page">
  <div class="form-container">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "field__item small-width" %><br />
        <%= f.email_field :email, autofocus: true, class: "field__item medium-width" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "field__item small-width" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "field__item medium-width" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me, class: "field__item" %>
          <%= f.label :remember_me, class: "field__item" %>
          <%= f.submit "Log in", id:"login-button" %>
        </div>
      <% end -%>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
